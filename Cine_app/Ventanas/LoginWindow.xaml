<Window x:Class="Cine_app.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Iniciar Sesión - Cinema" Height="600" Width="450"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Window.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,5"/>
        </Style>
        <Style TargetType="PasswordBox">
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,5"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,10"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#1a1a2e" Offset="0"/>
                <GradientStop Color="#16213e" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Border Background="White" 
                CornerRadius="10" 
                Padding="40"
                MaxWidth="350"
                VerticalAlignment="Center"
                Margin="20">
            <Border.Effect>
                <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.3"/>
            </Border.Effect>

            <StackPanel>
                <!-- Logo/Título -->
                <TextBlock Text="🎬" 
                          FontSize="60" 
                          HorizontalAlignment="Center"
                          Margin="0,0,0,10"/>
                <TextBlock Text="CINEMA" 
                          FontSize="28" 
                          FontWeight="Bold"
                          HorizontalAlignment="Center"
                          Foreground="#1a1a2e"
                          Margin="0,0,0,30"/>

                <!-- Formulario -->
                <TextBlock Text="Email:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <TextBox x:Name="txtEmail" 
                         BorderBrush="#ddd"
                         BorderThickness="1"/>

                <TextBlock Text="Contraseña:" FontWeight="SemiBold" Margin="0,15,0,5"/>
                <PasswordBox x:Name="txtPassword"
                            BorderBrush="#ddd"
                            BorderThickness="1"
                            KeyDown="TxtPassword_KeyDown"/>

                <!-- Mensaje de error -->
                <TextBlock x:Name="txtError" 
                          Foreground="Red" 
                          TextWrapping="Wrap"
                          Margin="0,10,0,0"
                          Visibility="Collapsed"/>

                <!-- Botones -->
                <Button x:Name="btnLogin" 
                        Content="Iniciar Sesión" 
                        Click="BtnLogin_Click"
                        Background="#e94560"
                        Foreground="White"
                        BorderThickness="0"
                        FontWeight="SemiBold"
                        Margin="0,20,0,0"/>

                <Button x:Name="btnRegistro" 
                        Content="Crear Cuenta" 
                        Click="BtnRegistro_Click"
                        Background="Transparent"
                        Foreground="#0f3460"
                        BorderBrush="#0f3460"
                        BorderThickness="2"
                        FontWeight="SemiBold"/>

                <Button x:Name="btnInvitado" 
                        Content="Cancelar" 
                        Click="BtnInvitado_Click"
                        Background="Transparent"
                        Foreground="#666"
                        BorderThickness="0"
                        FontSize="12"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>